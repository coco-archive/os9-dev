# Maintainer: Paul Hentschel <youremail@domain.com>

pkgname=toolshed-hg
pkgver=r672.041c3b1b927b
pkgrel=1
pkgdesc="A package of utilities to perform cross-development to the Tandy Color Computer and Dragon microcomputers."
arch=('x86_64')
url="http://toolshed.sourceforge.net"
license=('custom')
groups=('os9-dev')
makedepends=('mercurial' 'discount')
source=("LICENSE")
md5sums=('bed3f577dfb84088b9f89314a4900656')

_hgroot="http://hg.code.sf.net/p/toolshed/code"

pkgver() {
  cd "$pkgname"
  printf "r%s.%s" "$(hg identify -n)" "$(hg identify -i)" | sed s:+::g
}

prepare() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [[ -d "$pkgname" ]]; then
    cd "$pkgname"
    hg pull -u
    msg "The local files are updated."
  else
    hg clone "$_hgroot" "$pkgname"
  fi

  msg "Mercurial checkout done or server timeout"
}

build() {
  msg "Starting build..."

  rm -rf "$srcdir/$pkgname-build"
  cp -r "$srcdir/$pkgname" "$srcdir/$pkgname-build"
  cd "$srcdir/$pkgname-build"

  make -C build/unix 
}

package() {
  cd "$srcdir/$pkgname-build"
  make DESTDIR="$pkgdir/" -C build/unix install

  # Install license file
  install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname" "$srcdir/LICENSE" 
}

# vim:set ts=2 sw=2 et:
