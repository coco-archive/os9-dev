# Maintainer: Paul Hentschel <youremail@domain.com>

pkgname=toolshed
pkgver=2.2
pkgrel=1
pkgdesc="A package of utilities to perform cross-development to the Tandy Color Computer and Dragon microcomputers."
arch=('x86_64')
url="http://toolshed.sourceforge.net"
license=('custom')
groups=('os9-dev')
makedepends=('discount')
source=("https://launchpad.net/~tormodvolden/+archive/ubuntu/m6809/+files/${pkgname}_${pkgver}.orig.tar.gz"
        "copyright")
md5sums=('b2092676c436622c0a171b991d0ef7cb'
         '5065b9cf76bcf462e5a18e745142f04b')

build() {
  cd "$pkgname-$pkgver"
  make -C build/unix 
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" -C build/unix install

  # Install license file
  install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname" "$srcdir/copyright" 
  
  # Install image for HTML manual
  install -m644 doc/cover.jpg "$pkgdir/usr/share/doc/$pkgname/"
}

# vim:set ts=2 sw=2 et:
